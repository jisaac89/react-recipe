{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "module": "ES2015",
        "target": "ES2017",
        "jsx": "react-native",
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "./node_modules/@types/",
            "./src/@types/"
        ],
        "watch": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        ".next",
        "node_modules"
    ],
    "compileOnSave": true
}