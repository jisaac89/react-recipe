{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": "src",
        "outDir": ".build",
        "target": "esnext",
        "module": "esnext",
        "jsx": "preserve",
        "allowJs": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "removeComments": false,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "lib": [
            "dom",
            "es2015",
            "es2016"
        ]
    },
    "include": [
        "src",
        "src/recoil"
    ],
    "exclude": [
        "src/recoil/docs",
        "src/recoil/webpack.config.js"
    ]
}