{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "module": "esnext",
        "target": "esnext",
        "jsx": "react",
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "./node_modules/@types/",
            "./src/@types/"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        ".next",
        "node_modules",
        "src/recoil/docs/**"
    ],
    "compileOnSave": false
}